        <li>{{ book }}</li>
    {% else %}
        <li>No existen libros.</li>
    {% endfor %}
</ul>

<!-- Paginador -->
<ul class="paginator">
    {% for i in range(1, total/elements|length) %}
        <a href="{{ path('javiacei_book_list', {'page': i, 'limit': limit}) }}">PÃ¡gina {{ i }}</a>
    {% endfor %}
</ul>
{% endblock %}
