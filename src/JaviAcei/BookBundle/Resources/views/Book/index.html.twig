{% extends "::base.html.twig" %}

{% block body %}
<h1>Libros</h1>

<!-- Listado de libros paginados -->
<ul>
    {% for book in elements %}
        <li>{{ book }}</li>
    {% else %}
        <li>No existen libros.</li>
    {% endfor %}
</ul>

<!-- Paginador -->
<ul class="paginator">
    {% for i in range(paginator.firstPage, paginator.lastPage) %}
        <li><a href="{{ path('javiacei_book_list', {'page': i, 'limit': paginator.itemsPerPage}) }}">PÃ¡gina {{ i }}</a></li>
    {% endfor %}
</ul>
{% endblock %}
